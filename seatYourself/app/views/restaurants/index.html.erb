	<%# end %>

	</div>



</div>



	<!-- <ul> -->
	<div class="restaurant-row">
		<% @restaurants.each do |restaurant| %>
	<span><p><%= link_to restaurant[:name], restaurant %> </p>
			<p>Address: <%= restaurant[:addr] %></p> 
			<p>Phone: <%= restaurant[:phone] %></p>
			<p><%= image_tag(restaurant[:picture], class: "restaurant_icon") %> 
	</span>	
		<% end %>
	</div>
